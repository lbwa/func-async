    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "prepare": "tsdx build"
  },
  "dependencies": {},
  "devDependencies": {
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
